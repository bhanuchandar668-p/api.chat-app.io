{
  "name": "api.chat-app.io",
  "type": "module",
  "scripts": {
    "dev": "dotenvx run -- tsx watch src/index.ts",
    "build": "npx tsc",
    "start": "dotenvx run -- node dist/src/index.js",
    "migrations:gen": "dotenvx run -- tsx node_modules/drizzle-kit/bin.cjs generate",
    "migrations:apply": "dotenvx run -- drizzle-kit migrate",
    "db:studio": "tsx node_modules/drizzle-kit/bin.cjs studio"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.888.0",
    "@aws-sdk/s3-request-presigner": "^3.888.0",
    "@dotenvx/dotenvx": "^1.49.0",
    "@hono/node-server": "^1.19.0",
    "@hono/node-ws": "^1.2.0",
    "argon2": "^0.44.0",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.6",
    "pg": "^8.16.3",
    "socket.io": "^4.8.1",
    "valibot": "^1.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.5",
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}